.connect_box {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 32rpx;
  color: #666;
  font-family: "Microsoft YaHei";
  display: flex;
}

.connect_device_name {
  width: 40%;
  float: left;
  padding-left: 10px;
  color: #1cbbb4;
}

.connect_device_back {
  width: 45%;
  float: none;
  padding-left: 10px;
  color: #1cbbb4;
}

.connect_state {
  width: 15%;
  float: right;
  padding-right: 10px;
  text-decoration: underline;
  color: #1cbbb4;
}

.triangle-up {
  margin-left: 275rpx;
  margin-bottom: 25rpx;
  margin-top: 50rpx;
  width: 0;
  height: 0;
  border-left: 100rpx solid transparent;
  border-right: 100rpx solid transparent;
  border-bottom: 200rpx solid #1cbbb4;
}

.triangle-left {
  margin-left: 50rpx;
  width: 0;
  height: 0;
  border-top: 100rpx solid transparent;
  border-right: 200rpx solid #1cbbb4;
  border-bottom: 100rpx solid transparent;
}

.square {
  margin-left: 25rpx;
  margin-right: 25rpx;
  width: 200rpx;
  height: 200rpx;
  background: #1cbbb4;
}

.triangle-right {
  width: 0;
  height: 0;
  border-top: 100rpx solid transparent;
  border-left: 200rpx solid #1cbbb4;
  border-bottom: 100rpx solid transparent;
}

.triangle-down {
  margin-left: 275rpx;
  margin-top: 25rpx;
  width: 0;
  height: 0;
  border-left: 100rpx solid transparent;
  border-right: 100rpx solid transparent;
  border-top: 200rpx solid #1cbbb4;
}

